			<!-- all requests to nexus via the mirror -->
			<repositories>
				<repository>
					<id>central</id>
					<!-- This is a dummy URL that will be redirected to Nexus using the nexus mirror -->
					<url>http://central</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
